@model EventManagementSystem.Models.Guestmodel

@{
    ViewData["Title"] = "Delete Guest";
}
<h2>Admin -> Guests->Delete Guest</h2>


<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Guest</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Guest Name
        </dt>
        <dd class="col-sm-10">
            @Model.GuestName
        </dd>
        <dt class="col-sm-2">
            Guest Gender
        </dt>
        <dd class="col-sm-10">
            @Model.GuestGender
        </dd>
        <dt class="col-sm-2">
            City/Town/Village
        </dt>
        <dd class="col-sm-10">
            @Model.ListCityTownVillage.FirstOrDefault(ctv => ctv.CityTownVillageID == Model.CityTownVillageID)?.CityTownVillageName
        </dd>
    </dl>

    <form asp-action="DeleteGuest">
        <input type="hidden" asp-for="GuestId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Guests" class="btn btn-secondary">Cancel</a>
    </form>
</div>