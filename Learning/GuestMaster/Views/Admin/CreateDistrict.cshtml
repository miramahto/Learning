@model EventManagementSystem.Models.Districtmodel

@{
    ViewData["Title"] = "Create District";
}

<h2>Create District</h2>

<form asp-action="CreateDistrict" method="post">
    <div class="form-group">
        <label asp-for="StateId" class="control-label">State</label>
        <select asp-for="StateId" class="form-control" asp-items="ViewBag.States">
            <option value="">Select a state</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="DistrictName" class="control-label">District</label>
        <input asp-for="DistrictName" class="form-control" />
        <span asp-validation-for="DistrictName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}