@model EventManagementSystem.Models.CityTownVillagemodel

@{
    ViewData["Title"] = "Delete City/Town/Village";
}

<h2>Delete City/Town/Village</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>City/Town/Village</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            City/Town/Village Name
        </dt>
        <dd class="col-sm-10">
            @Model.CityTownVillageName
        </dd>
        <dt class="col-sm-2">
            District
        </dt>
        <dd class="col-sm-10">
            @Model.DistrictName
        </dd>
        <dt class="col-sm-2">
            State
        </dt>
        <dd class="col-sm-10">
            @Model.StateName
        </dd>
    </dl>

    <form asp-action="DeleteCityTownVillage">
        <input type="hidden" asp-for="CityTownVillageID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="CityTownVillages" class="btn btn-secondary">Cancel</a>
    </form>
</div>