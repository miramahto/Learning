@model EventManagementSystem.Models.EventsMastermodel

@{
    ViewData["Title"] = "Delete Event";
}

<h2>Admin -> Events->Edit Event</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Event Name
        </dt>
        <dd class="col-sm-10">
            @Model.EventName
        </dd>
        <dt class="col-sm-2">
            Event Date
        </dt>
        <dd class="col-sm-10">
            @Model.EventDate.ToString("yyyy-MM-dd")
        </dd>
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>
    </dl>

    <form asp-action="DeleteEvent">
        <input type="hidden" asp-for="EventId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Events" class="btn btn-secondary">Cancel</a>
    </form>
</div>