@model EventManagementSystem.Models.CityTownVillagemodel

@{
    ViewData["Title"] = "Edit City/Town/Village";
}

<h2>Edit City/Town/Village</h2>

<form asp-action="EditCityTownVillage" method="post">
    <input type="hidden" asp-for="CityTownVillageID" />
    <div class="form-group">
        <label asp-for="DistrictId" class="control-label">District</label>
        <select asp-for="DistrictId" class="form-control" asp-items="ViewBag.Districts">
            <option value="">Select a district</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="CityTownVillageName" class="control-label">City/Town/Village</label>
        <input asp-for="CityTownVillageName" class="form-control" />
        <span asp-validation-for="CityTownVillageName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}