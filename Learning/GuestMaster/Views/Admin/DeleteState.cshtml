@model EventManagementSystem.Models.Statemodel

@{
    ViewData["Title"] = "Delete State";
}

<h6>Admin->Countries->Delete State</h6>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>State</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            State Name
        </dt>
        <dd class="col-sm-10">
            @Model.StateName
        </dd>
        <dt class="col-sm-2">
            Country
        </dt>
        <dd class="col-sm-10">
            @Model.CountryName
        </dd>
    </dl>

    <form asp-action="DeleteState">
        <input type="hidden" asp-for="StateId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="States" class="btn btn-secondary">Cancel</a>
    </form>
</div>
