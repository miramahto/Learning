@model EventManagementSystem.Models.Districtmodel

@{
    ViewData["Title"] = "Delete District";
}

<h2>Admin->Districts->Delete District</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>District</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            District Name
        </dt>
        <dd class="col-sm-10">
            @Model.DistrictName
        </dd>
        <dt class="col-sm-2">
            State
        </dt>
        <dd class="col-sm-10">
            @Model.StateName
        </dd>
    </dl>

    <form asp-action="DeleteDistrict">
        <input type="hidden" asp-for="DistrictId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Districts" class="btn btn-secondary">Cancel</a>
    </form>
</div>